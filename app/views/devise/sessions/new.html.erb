<div class="banner" style="background-image: linear-gradient(-225deg, rgba(169,169,169,0.6) 20%, rgba(54,56,58,0.6) 70%), url('<%= image_path 'box.jpg'%>');">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3" style="background-color: rgba(255,255,255, 0.3); padding: 30px 70px;">
      <h2 style="margin-bottom: 25px;">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: ' btn-login btn-lg btn-block' %>
        </div>

      <% end %>

      <div class="button-links"><%= render "devise/shared/links", class: 'button-links' %></div>
    </div>
  </div>
</div>
</div>
