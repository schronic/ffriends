<%= simple_form_for @friend do |f| %>
  <%= f.error_notification %>
  <%= f.input :rating, collection: Friend::RATING %>
  <%= f.input :strength, collection: Friend::STRENGTH %>
  <%= f.input :weight, collection: Friend::WEIGHT %>
  <%= f.input :height, collection: Friend::HEIGHT %>
  <%= f.input :nationality, collection: Friend::NATIONALITY %> <!-- Nationality collection -->
  <%= f.input :slogan %>
  <%= f.input :age %>
  <%= f.input :price %>
  <%= f.input :picture %>
  <%= f.input :picture_cache, as: :hidden %>
  <%= f.input :wins %>
  <%= f.input :losses %>
  <%= f.input :description %>
  <%= f.button :submit, "Upload Friend", class: 'btn button-primary button-lg'%>
<% end %>
