<%= simple_form_for @friend do |f| %>
<%= f.error_notification %>
<div class="col-md-8 col-md-offset-2">
<h2>Add a Friend</h2>

  <div class="row">
    <div class="col-md-6"><%= f.input :description %></div>
    <div class="col-md-6"><%= f.input :nationality %></div>
  </div>
  <div class="row">
    <div class="col-md-12"><%= f.input :slogan %></div>
  </div>
  <div class="row">
    <div class="col-md-3"><%= f.input :rating %></div>
    <div class="col-md-3"><%= f.input :strength %></div>
    <div class="col-md-3"><%= f.input :weight %></div>
    <div class="col-md-3"><%= f.input :height %></div>
  </div>
  <div class="row">
    <div class="col-md-3"><%= f.input :age %></div>
    <div class="col-md-3"><%= f.input :price %></div>
    <div class="col-md-3"><%= f.input :wins %></div>
    <div class="col-md-3"><%= f.input :losses %></div>
  </div>


  <%= f.input :picture %>
  <%= f.input :picture_cache, as: :hidden %>

  <%= f.button :submit, "Upload Friend", class: 'btn button-primary button-lg'%>
  <% end %>
</div>

